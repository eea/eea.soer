<metal:block use-macro="here/global_defines/macros/defines" />
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<head>
    <title>Promotions Admin Panel</title>
</head>

<body>

<metal:main metal:fill-slot="main">
<tal:main-macro metal:define-macro="main">

    <table>
        <thead>
        <tr>
            <th>Country</th>
        </tr>
        </thead>
        <tbody>
        <tal:countries tal:define="countries  view/info"
            tal:repeat="country countries">
            <tr>
                <td><a href="" tal:attributes="href python:country['url']+'/'"><h3
		       tal:content="country/title">Country (<tal:code content="country/id" />)</h3></a>
	        <table>
		<thead>
                   <th></th>
		<thead>
		<tbody>
		<tr tal:repeat="report country/reports">
                   <td tal:content="report/Title"
		       tal:attributes="class python:'state-'+report.review_state"></td>
                </tr>
              </tbody>
             </table>
          </td>
          </tr>
         </tal:countries>
     </tbody>
     </table>


</tal:main-macro>
</metal:main>

</body>
</html>
